import java.util.*;
public class SeventyOneA {
    static Scanner sc = new Scanner(System.in);
    public static void main(String[] args){
        int a = sc.nextInt();
        if(a>2 && a%2 == 0){
            System.out.println("YES");
        }
        else{
        System.out.println("NO");
        }
    }
    
}
